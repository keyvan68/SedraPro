@model App.EndPoints.MVC.SedraPro.Models.ViewModels.MultiModelViewModel

@{
    ViewData["Title"] = "اطلاعات کاربر";
}
<h1>اطلاعات کاربر</h1>


<body class="container mt-4">

    <div class="card">
        <div class="card-header  d-flex align-items-center justify-content-between">
            
            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">

                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="base-info-tab" data-bs-toggle="tab" data-bs-target="#base-info" type="button" role="tab" aria-controls="base-info" aria-selected="true">
                        اطلاعات پایه
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="extra-info-tab" data-bs-toggle="tab" data-bs-target="#extra-info" type="button" role="tab" aria-controls="extra-info" aria-selected="false">
                        اطلاعات تکمیلی
                    </button>
                </li>

            </ul>

            <a class="btn btn-primary text-white" asp-area="" asp-controller="User" asp-action="Index">
                <i class="fa-solid fa-arrow-left"></i>
            </a>

        </div>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <!-- تب اطلاعات پایه -->
                <div class="tab-pane fade show active" id="base-info" role="tabpanel" aria-labelledby="base-info-tab">
                    <div class="mb-3 text-center">
                        @if (!string.IsNullOrEmpty(Model.User.ImageUrl))
                        {
                            <img src="@Url.Content($"~/{Model.User.ImageUrl}")" alt="تصویر کاربر" class="img-thumbnail" width="200">
                        }
                        else
                        {
                            <img src="@Url.Content("~/Images/NoPic/nopic.jpg")" alt="تصویر وجود ندارد" class="img-thumbnail" width="200">
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Html.DisplayNameFor(model => model.User.Name)&nbsp;:&nbsp;</label>
                        <p class="d-inline">@Html.DisplayFor(model => model.User.Name)</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Html.DisplayNameFor(model => model.User.Family)&nbsp;:&nbsp;</label>
                        <p class="d-inline">@Html.DisplayFor(model => model.User.Family)</p>
                    </div>
                </div>

                <!-- تب اطلاعات تکمیلی -->
                <div class="tab-pane fade" id="extra-info" role="tabpanel" aria-labelledby="extra-info-tab">
                    <div class="mb-3">

                        <label class="form-label">@Html.DisplayNameFor(model => model.UserDeail.Age)&nbsp;:&nbsp;</label>
                        <p class="d-inline">@Html.DisplayFor(model => model.UserDeail.Age)</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Html.DisplayNameFor(model => model.UserDeail.Gender)&nbsp;:&nbsp;</label>
                        <p class="d-inline">@Html.DisplayFor(model => model.UserDeail.Gender)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>*@
</body>
